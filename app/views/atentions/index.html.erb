<p id="notice"><%= notice %></p>

<h1>Listing Atentions</h1>

<table>
  <thead>
    <tr>
      <th>Veterinary appointment</th>
      <th>Customer</th>
      <th>Pet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atentions.each do |atention| %>
      <tr>
        <td><%= atention.veterinary_appointment.id %></td>
        <td><%= atention.customer.name %></td>
        <td><%= atention.pet.name %></td>
        <td><%= link_to 'Show', atention %></td>
        <td><%= link_to 'Edit', edit_atention_path(atention) %></td>
        <td><%= link_to 'Destroy', atention, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

