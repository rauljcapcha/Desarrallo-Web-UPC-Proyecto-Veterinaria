<%- model_class = Consumption -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:'Correlativo') %></th>
      <th><%= model_class.human_attribute_name(:'AtenciÃ³n') %></th>
      <th><%= model_class.human_attribute_name(:service_id) %></th>
      <th><%= model_class.human_attribute_name(:guide_id) %></th>
      <th><%= model_class.human_attribute_name(:unitprice) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:subtotal) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @consumptions.each do |consumption| %>
      <tr>
        <td><%= link_to consumption.id, consumption_path(consumption) %></td>
        <td><%= consumption.atention_id %></td>
        <td><%= consumption.service.name %></td>
        <td><%= consumption.guide_id %></td>
        <td><%= consumption.unitprice %></td>
        <td><%= consumption.quantity %></td>
        <td><%= consumption.subtotal %></td>
        <td><%=l consumption.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_consumption_path(consumption), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      consumption_path(consumption),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_consumption_path,
            :class => 'btn btn-primary' %>
