<p id="notice"><%= notice %></p>

<h1>Listing Consumptions</h1>

<table>
  <thead>
    <tr>
      <th>Atention</th>
      <th>Service</th>
      <th>Guide</th>
      <th>Unitprice</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consumptions.each do |consumption| %>
      <tr>
        <td><%= consumption.atention.id %></td>
        <td><%= consumption.service.name %></td>
        <td><%= consumption.guide.id %></td>
        <td><%= consumption.unitprice %></td>
        <td><%= consumption.quantity %></td>
        <td><%= consumption.subtotal %></td>
        <td><%= link_to 'Show', consumption %></td>
        <td><%= link_to 'Edit', edit_consumption_path(consumption) %></td>
        <td><%= link_to 'Destroy', consumption, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

