<%- model_class = Consumption -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:atention_id) %>:</strong></dt>
  <dd><%= @consumption.atention_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:service_id) %>:</strong></dt>
  <dd><%= @consumption.service_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:guide_id) %>:</strong></dt>
  <dd><%= @consumption.guide_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unitprice) %>:</strong></dt>
  <dd><%= @consumption.unitprice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @consumption.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtotal) %>:</strong></dt>
  <dd><%= @consumption.subtotal %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              consumptions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_consumption_path(@consumption), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              consumption_path(@consumption),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
