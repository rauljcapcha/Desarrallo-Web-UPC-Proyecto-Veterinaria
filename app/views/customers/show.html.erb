<%- model_class = Customer -%>

<div class="page-header">
  
</div>

<div class="panel panel-info">
  <div class="panel-heading"><h1>Cliente</h1>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt><strong>Tipo de Documento:</strong></dt>
      <dd><%= @customer.document_type.name %></dd>
      <dt><strong>N° de Documento:</strong></dt>
      <dd><%= @customer.documentnumber %></dd>
      <dt><strong>Nombres del Clientes:</strong></dt>
      <dd><%= @customer.name %></dd>
      <dt><strong>Dirección:</strong></dt>
      <dd><%= @customer.streetaddresss %></dd>
      <dt><strong>Código postal:</strong></dt>
      <dd><%= @customer.postalcode %></dd>
      <dt><strong>N° de Teléfono:</strong></dt>
      <dd><%= @customer.phone %></dd>
      <dt><strong>Correo Electrónico:</strong></dt>
      <dd><%= @customer.email %></dd>
    </dl>
  </div>
  <div class="table-responsive">
    <table class="table">
      <div>
        <%= link_to "Agregar mascota", new_pet_path(@customer), :class => 'btn btn-success', :span => "icon-prev" %>
      </div>
      <tr>
        <th></th>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <th><%= model_class.human_attribute_name(:sex) %></th>
        <th><%= model_class.human_attribute_name(:breed_id) %></th>
        <th  colspan="2"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      
      <% @customer.pets.each do |pet| %>
        <tr>
          <td><%= link_to "Ver datos : #{pet.id}", pet_path(pet), :class => 'btn btn-info btn-xs' %></td>
          <td><%= pet.name %></td>
          <td><%= pet.sex %></td>
          <td><%= pet.breed.name %></td>
          <td><%= link_to 'Editar Mascota', edit_pet_path(pet), :class => 'btn btn-success' %></td>
          <td>
            <%= link_to 'Eliminar Mascota', pet_path(pet),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div>
<%= link_to 'Regresas  la Lista de Clientes', customers_path, :class => 'btn btn-default'  %>
</div>
<div>
<%= link_to 'Editar datos del Cliente', edit_customer_path(@customer), :class => 'btn btn-success' %>
</div>
<div>
<%= link_to 'Eliminar Cliente', customer_path(@customer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>