<%- model_class = DetailGuide -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:guide_id) %></th>
      <th><%= model_class.human_attribute_name(:product_id) %></th>
      <th><%= model_class.human_attribute_name(:unitprice) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:subtotal) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @detail_guides.each do |detail_guide| %>
      <tr>
        <td><%= link_to detail_guide.id, detail_guide_path(detail_guide) %></td>
        <td><%= detail_guide.guide_id %></td>
        <td><%= detail_guide.product.name %></td>
        <td><%= detail_guide.unitprice %></td>
        <td><%= detail_guide.quantity %></td>
        <td><%= detail_guide.subtotal %></td>
        <td><%= detail_guide.note %></td>
        <td><%=l detail_guide.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_detail_guide_path(detail_guide), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      detail_guide_path(detail_guide),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_detail_guide_path,
            :class => 'btn btn-primary' %>
