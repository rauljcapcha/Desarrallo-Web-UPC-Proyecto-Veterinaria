<%- model_class = DetailGuide -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:guide_id) %>:</strong></dt>
  <dd><%= @detail_guide.guide_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @detail_guide.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unitprice) %>:</strong></dt>
  <dd><%= @detail_guide.unitprice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @detail_guide.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subtotal) %>:</strong></dt>
  <dd><%= @detail_guide.subtotal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:note) %>:</strong></dt>
  <dd><%= @detail_guide.note %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              detail_guides_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_detail_guide_path(@detail_guide), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              detail_guide_path(@detail_guide),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
