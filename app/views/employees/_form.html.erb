      <%= f.select :document_type_id, options_for_select(DocumentType.all.map{|s|[s.name, s.id]}, selected_key = @employee.document_type_id), :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:document_type_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :'NÂ° de Documento', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :documentnumber, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:documentnumber]) %>
  </div>
  <div class="control-group">
    <%= f.label :'Nombres', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :'Apellido Paterno', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :lastname, :class => 'form-control' %>
    </div>
    <%= error_span(@employee[:lastname]) %>
  </div>
  <div class="control-group">
    <%= f.label :'Apellido Materno', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :motherslastname, :class => 'form-control' %>
