<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'Tipo de Producto' %><br>
    <%= f.select :product_type_id, options_for_select(ProductType.all.map{|s|[s.name, s.id]}, selected_key = @product.product_type_id)%>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :saleprice %><br>
    <%= f.text_field :saleprice %>
  </div>
  <div class="field">
    <%= f.label :'Proveedor' %><br>
    <%= f.select :provider_id, options_for_select(Provider.all.map{|s|[s.name, s.id]}, selected_key = @product.provider_id)%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
