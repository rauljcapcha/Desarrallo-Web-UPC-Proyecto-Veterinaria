<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Iniciar Sesión</h3>
            </div>
            <div class="panel-body">
                <% provide(:title, "Log in") %>
                <%= form_for(:session, url: login_path) do |f| %>
                    <%= f.label :'' %>
                    <%= f.email_field :email, :placeholder => "E-mail", class: 'form-control' %>
                    <%= f.label :'' %>
                    <%= f.password_field :password, :placeholder => "Contraseña", class: 'form-control' %>
                    <%= f.label :'Recordarme', class: "checkbox-line" do %>
                    <%= f.check_box :remember_me %>
                    <span>Recordarme en este equipo</span>
                    <% end %>
                    <br>
                    <!-- Change this to a button or input when using this as a form -->
                    <%= f.submit "Iniciar Sesión", class: "btn btn-lg btn-success btn-block" %>
                <% end %>
                <br>
                <p><%= link_to "Registrarse ahora!", signup_path, class: "btn btn-lg btn-default btn-block" %></p>
            </div>
        </div>
    </div>
</div>
