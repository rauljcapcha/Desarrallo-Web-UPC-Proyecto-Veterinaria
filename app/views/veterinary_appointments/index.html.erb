<h1>Listing Veterinary Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Id Cita</th>
      <th>Customer</th>
      <th>Pet</th>
      <th>Dateappointment</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @veterinary_appointments.each do |veterinary_appointment| %>
      <tr>
        <td><%= veterinary_appointment.id %></td>
        <td><%= veterinary_appointment.customer.name %></td>
        <td><%= veterinary_appointment.pet.name %></td>
        <td><%= veterinary_appointment.dateappointment %></td>
        <td><%= veterinary_appointment.note %></td>
        <td><%= link_to 'Show', veterinary_appointment %></td>
        <td><%= link_to 'Edit', edit_veterinary_appointment_path(veterinary_appointment) %></td>
        <td><%= link_to 'Destroy', veterinary_appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

