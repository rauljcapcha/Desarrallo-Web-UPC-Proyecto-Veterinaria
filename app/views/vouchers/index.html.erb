<p id="notice"><%= notice %></p>

<h1>Listing Vouchers</h1>

<table>
  <thead>
    <tr>
      <th>Voucher type</th>
      <th>Serialnumber</th>
      <th>Vouchernumber</th>
      <th>Atention</th>
      <th>Customer</th>
      <th>Pet</th>
      <th>Total</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.voucher_type %></td>
        <td><%= voucher.serialnumber %></td>
        <td><%= voucher.vouchernumber %></td>
        <td><%= voucher.atention %></td>
        <td><%= voucher.customer %></td>
        <td><%= voucher.pet %></td>
        <td><%= voucher.total %></td>
        <td><%= voucher.seller %></td>
        <td><%= link_to 'Show', voucher %></td>
        <td><%= link_to 'Edit', edit_voucher_path(voucher) %></td>
        <td><%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

